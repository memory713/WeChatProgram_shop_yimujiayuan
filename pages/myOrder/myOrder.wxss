/* pages/myOrder/myOrder.wxss */

page {
    background-color: #e8e9e9;
}

.container {
    font-size: 25rpx;
    background: #efeff4;
    position: relative;
}

.none {
    position: absolute;
    top: 100rpx;
}

.header {
    width: 100%;
    display: flex;
    border-top: 1px solid #e3e3e3;
    background: white;
    flex-direction: row;
    justify-content: flex-start;
    height: 70rpx;
    line-height: 70rpx;
    position: fixed;
    top: 0;
    z-index: 9999;
}

.kong {
    width: 100%;
    height: 70rpx;
}

.tab {
    text-align: center;
    width: 25%;
    border-bottom: 2px solid transparent;
}

.tabActive {
    border-bottom: 2px solid #5d1402;
    color: #5d1402;
}

.content {
    width: 100%;
    background: white;
    margin-top: 5px;
    position: relative;
    z-index: 99;
}

.topContent {
    padding: 20rpx;
    display: flex;
    box-sizing: border-box;
    
   
}

.btn {
    color: #5d1402;
    float: right;
    margin: 0;
    margin-bottom: 5px;
    margin-top: 5px;
    margin-right: 15px;
    font-size: 20rpx;
}

.goodsImg {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.rightContent {
  
   width:100%;
   margin-left:20rpx;
}

.bottomContent {
    border-top: 1px solid #e3e3e3;
    /* padding: 20rpx;   */
}

.color-orange {
    color: #5d1402;
}
