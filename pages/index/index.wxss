/**index.wxss**/

.swiper {
    height: 300rpx;
    width: 100%;
}

.swiper image {
    height: 100%;
    width: 100%;
}

.video-all {
    height: 360rpx;
    width: 100%;
    background-color: #fff;
    border-bottom:5px solid #e2e2e2;
     box-sizing: border-box; 
    
}

#myVideo {
    height: 300rpx;
    margin-top:3rpx;
    width: 100%;
}

page {
    background-color: #e8e9e9;
}

view {
    font-family: "微软雅黑";
}

.top {
    position: relative;
    z-index: 99999;
    box-shadow: 2px 1px 10px #000;
    border-top: 1px solid #f4eac2;
}

.top-change {
    font-size: 30rpx;
    text-align: center;
    width: 50%;
    display: inline-block;
    height: 70rpx;
    line-height: 70rpx;
}

.bc_green {
    background-color: #5d1402;
    color: #fff;
}

.bc_white {
    background-color: #edece8;
    color: #5d1402;
}

.print-name {
    display: flex;
    font-size: 25rpx;
     padding-top: 8px; 
    line-height: 50rpx;
    height: 70rpx;
    background-color: #fff;
}

.input-text {
    display: inline-block;
    width: 20%;
    text-align: center;
    font-size: 25rpx;
    height: 70rpx;
}

#input-name {
    width: 50%;
    border: 1px solid #e2e2e2;
    display: inline-block;
    border-radius: 10rpx;
    padding-left: 5px;
    height: 48rpx;
    min-height: 0.5rem;
    font-size: 25rpx;
}

.input-sure {
    width: 20%;
    margin-left: 5%;
    font-size: 25rpx;
    border-radius: 20rpx;
    text-align: center;
    border: none;
    height: 50rpx;
    background-color: #5d1402;
    color: #fff;
}

.middle-body {
    display: inline-block;
    /* height: 150rpx; */
    width: 50%;
    padding: 5px;
    box-sizing: border-box;
    margin-bottom: 5px;
}

.middle-body-in {
    position: relative;
    background-color: #f4eac2;
    border-radius: 5px;
    height: 100rpx;
    padding: 5px;
}

.middle-input {
    padding-left: 5rpx;
    background-color: #fff;
    width: 70%;
    /* margin-top:5px; */
    border: 1px solid #edece8;
}

.middle {
    background-color: #fff;
}

.middle-top {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 10rpx;
}

.sureIcon {
    position: absolute;
    right: 2px;
    top: 2px;
    width: 60rpx;
    height: 60rpx;
}

.goods-name {
    margin-top: 0rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    float: left;
}

/*bottom*/

.bottom {
    height: 80rpx;
    border-top: 1px solid #f3f3f3;
    position: fixed;
    z-index: 99;
    background-color: #fff;
    bottom: 0;
    width: 100%;
    font-size: 25rpx;
}

.bottom-number {
    width: 50%;
    height: 100%;
    display: inline-block;
    text-align: center;
    float: left;
}

.numberAll {
    font-size: 25rpx;
    width: 100%;
    line-height: 40rpx;
    height: 50%;
    color: #878787;
}

.bottom-click {
    width: 48%;
    height: 80rpx;
    line-height: 80rpx;
    display: inline-block;
    float: right;
    text-align: center;
    border-left: 1px solid #f3f3f3;
    background-color: #5d1402;
    color: #fff;
    font-size: 30rpx;
}

.orange {
    color: #5d1402;
}

/*body2  */

.body2 {
    font-size: 25rpx;
    color: #7a7a7a;
}

.number-all {
    width: 100%;
    height: 50rpx;
    background-color: #fff;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    box-sizing: border-box;
    padding: 10rpx;
    padding-left: 25rpx;
    box-shadow: 2px 2px 10px #888;
}

.number-all text {
    color: #5d1402;
}

.order-details {
    display: flex;
    justify-content: space-between;
    margin-top: 5px;
    background-color: #fff;
}

.order-details-0 {
    display: flex;
    flex-direction: column;
    height: 100rpx;
    width: 90%;
    background-color: #fff;
    border-radius: 5px;
    padding: 10rpx;
}

.jinru {
    display: inline-block;
    /* width: 20%; */
    height: 100rpx;
    line-height: 100rpx;
    font-size: 50rpx;
    padding-right: 10px;
    padding-left: 10px;
    margin-top: 10rpx;
}

.jinru image {
    width: 20px;
    height: 40rpx;
}

.order-details-1 {
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 10px;
}

.checked-color {
    background-color: #5d1402;
}

.radio-all {
    display: flex;
    padding-top: 5px;
    padding-bottom: 5px;
    background-color: #f4eac2;
    align-items: center;
    font-size: 25rpx;
    /* justify-content: center; */
}

.beizhu {
    font-size: 20rpx;
    padding-left: 10px;
    height: 50rpx;
    line-height: 30px;
    color: #5d1402;
    background-color: #fff;
}
